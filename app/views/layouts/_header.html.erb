<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("home.title"), static_pages_home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home_title"), static_pages_home_path %></li>
        <li><%= link_to t("help_title"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("account.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", data: {toggle: "dropdown"}} do %>
              <%= t("account.account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("account.profile"), current_user %></li>
              <li><%= link_to t("account.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("account.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("account.login"), login_path %></li>
        <% end %>
        <li><%= link_to t("locale.en"), locale: :en %></li>
        <li><%= link_to t("locale.vi"), locale: :vi %></li>
      </ul>
    </nav>
  <div>
</header>
