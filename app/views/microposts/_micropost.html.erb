<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.validates.max_size_image), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t("micropost.time_ago_in_words", time_ago_in_words: (time_ago_in_words micropost.created_at)) %>
    <% if current_user? micropost.user %>
      <%= link_to t("action.delete"), micropost, method: :delete, data: {confirm: t("action.confirm")} %>
    <% end %>
  </span>
</li>
