<% provide :title, t("account.login") %>
<% provide :title_base, t("title") %>
<h1 class="text-center"><%=t("account.login")%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("account.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("account.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox" do %>
        <%= f.check_box :remember_me %>
        <span><%=t("account.remember_me")%></span>
      <% end %>
      <%= f.submit t("account.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("message.new_user") %> <%= link_to t("account.signup"), signup_path %></p>
  </div>
</div>
