<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("micropost.form_placeholder") %>
  </div>
  <%= f.submit t("action.save"), class: "btn btn-primary" %>
  <span class="image">
      <%= f.file_field :image, accept: Settings.validates.type_image %>
  </span>
<% end %>
